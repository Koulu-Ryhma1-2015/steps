<script>
$(document).ready(function() {

  // only small screens
  if($(window).width() <= 600){
    // show menu on swipe to right
    if ($("#leftMenu").hasClass("hidden")){
        if($("#rightMenu").hasClass("hidden")){
            $(document).on('swiperight', function(e) {
            e.preventDefault();
            $('#leftMenu').animate({
            left: '0'
            });
            $('#leftMenu').removeClass("hidden");
            });
            $(document).on('swipeleft',function(e){
            e.preventDefault();
            $('#rightMenu').animate({
            left: '0'
            });
            $("#rightMenu").removeClass("hidden");
            });
        }
        else {
           $(document).on('swiperight', function(e) {
            e.preventDefault();
            $('#rightMenu').animate({
            left: '-100%'
            });
            $('#rightMenu').addClass("hidden");
            }); 
        }}
     else {
            $(document).on('swipeleft',function(e){
            e.preventDefault();
            $('#leftMenu').animate({
            left: '-100%'
            });
            $("#leftMenu").addClass("hidden");
            });
    };
    };    
  };


</script>

    <script>
	
	
$(document).ready(function() {
    

  // only small screens
 if($(window).width() <= 600){
    // show menu on swipe to right
   
        
            $(document).on('swiperight', function(e) {
                e.preventDefault();
                if ($('#leftMenu').hasClass('hidden') && $('#rightMenu').hasClass('hidden')){
                    $('#leftMenu').animate({
                    left: '0'
                    })
                    $('#leftMenu').removeClass('hidden')
                    };
                    
                else {
                    $('#rightMenu').animate({
                    left: '-100%'
                    })
                        $('#rightMenu').addClass('hidden')
                    };
            }); 
                
                
                
            $(document).on('swipeleft',function(e){
                e.preventDefault();
                
            if($('#rightMenu').hasClass('hidden') && $('#leftMenu').hasClass('hidden')){
                $('#rightMenu').animate({
                left: '0'
                })
                    $('#rightMenu').removeClass('hidden')
                };
             else {
                $('#leftMenu').animate({
                left: '-100%'
                })
                    $('#leftMenu').addClass('hidden')
                };
            });
};
    });
    


</script>  

